@model IEnumerable<TaskProject.ViewModel.AccountViewModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>Tüm Hesaplar</title>
    <link rel="stylesheet" href="~/Content/css/admin.css">
</head>
<body>
    <div class="container">
        <h2>Tüm Hesaplar</h2>
        <table class="table table-bordered admin-table">
            <thead>
                <tr>
                    <th>Hesap Numarası</th>
                    <th>Kullanıcı Adı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model)
                {
                    <tr>
                        <td>@account.AccountNumber</td>
                        <td>@account.UserName</td>
                        <td>
                            <a href="@Url.Action("Details", "AdminAccounts", new { id = account.AccountID })" class="admin-button btn btn-info">Detaylar</a> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>